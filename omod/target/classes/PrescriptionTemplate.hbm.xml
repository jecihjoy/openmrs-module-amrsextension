<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="package org.openmrs.module.amrsordermodule">
    <class name="org.openmrs.module.amrsordermodule.models.PrescriptionTemplate" table="prescription_templates">
        <id name="templateId" type="int" column="template_id" unsaved-value="0">
            <generator class="native" />
        </id>

        <discriminator column="template_id" insert="false" />
        <many-to-one name="concept" class="org.openmrs.Concept" not-null="true">
            <column name="concept_id" />
        </many-to-one>

        <property name="name" type="java.lang.String"
                  column="name"/>

        <property name="orderTemplate" type="java.lang.String"
                  column="order_template"/>

        <property name="type" type="java.lang.Integer"  column="type"/>

        <property name="orderTemplateType" type="java.lang.String"
                  column="order_template_type" length="1024"/>

        <property name="version" type="java.lang.String" column="version" />
        <property name="published" type="boolean" length="1"/>
        <property name="description" type="java.lang.String" length="1024" />

        <property name="uuid" type="java.lang.String" column="uuid" length="38" unique="true" />

        <property name="dateCreated" type="java.util.Date" column="date_created" not-null="true" length="19" />
        <property name="dateChanged" type="java.util.Date" column="date_changed" length="19"/>
        <property name="dateRetired" type="java.util.Date" column="date_retired" length="19" />

        <property name="retired" type="boolean" length="1" not-null="true" />
        <property name="retireReason" type="java.lang.String" column="retire_reason" length="255" />

        <many-to-one name="creator" class="org.openmrs.User" not-null="true" />
        <many-to-one name="changedBy" class="org.openmrs.User" column="changed_by"/>
        <many-to-one name="retiredBy" class="org.openmrs.User" column="retired_by" />

    </class>
</hibernate-mapping>